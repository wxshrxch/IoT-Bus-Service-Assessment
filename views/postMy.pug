extends ./layout.pug
block content
  .container
  .pd-ltr-20.xs-pd-20-10
    .min-height-200px
    .card-box.mb-30(style="text-align:center;")
      .pb-20
        table.data-table.table.stripe.hover.nowrap
          thead
            tr
              th 버스번호
              th 내용
              th 승차감 평점
              th 긍정 평점
              th 작성일
              th.datatable-nosort 관리
          tbody
            if(docs)
            each doc, index in docs
              tr
                td.table-plus #{doc.busnum}
                td 
                    -var view = "/post/view?post_id=" + doc._id
                        a(href=view role='button' style="color:black; font-size:16px; font-weight:lighter; text-decoration: none;") #{doc.main} 
                td 
                  each aa,index in eun
                    if(doc.busnum == aa)
                      p &#x2B50; #{seo[index]}
                      -var leeeun = 'a'
                    else
                      if(index+1 == lee)
                        if(leeeun != 'a')
                          p &#x2B50; 0.0
                td 
                  each bb,index in do_star1 
                    if(doc.busnum == bb)
                      p &#x2B50; #{do_star2[index]}           
                td #{a[index]}
                

                td
                    a.btn.btn-success.btn-sm.btn-icon-text.mr-3(style='margin-right:-10px;' href="/post/edit?post_id=" + doc._id role='button')
                      | 편집&nbsp;&nbsp;
                      i.typcn.typcn-edit.btn-icon-append
                    a.btn.btn-danger.btn-sm.btn-icon-text(style='margin-left:0px;' href="/post/delete?post_id=" + doc._id role='button')
                      | 삭제
                      i.typcn.typcn-delete-outline.btn-icon-append


       

   
